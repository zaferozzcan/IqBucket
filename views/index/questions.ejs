<%- include("../partials/header.ejs") %>

<%- include("../partials/navbar.ejs") %>


<div id="questions-box">
    <div style="margin: 100px auto;" class="container">
        <div class="row">
            <div class="col-md-6 col-sm-0 header head">
                <h1>Top <%= qts[0].tech %> questions</h1>
            </div>
        </div>

        <div style="border:1px solid; border-radius: 5px;" class="row question-box-inner">

            <div class="col-md-12 question-chip-container">

                <ol class="question-chip-list">
                    <% qts.forEach(q =>{ %>
                    <li>
                        <button type="button" class="collapsible"> <span><%=q.question%></span></button>
                        <div class="content">
                            <p><%=q.answer%></p>
                        </div>
                    </li>
                    <%})%>
                </ol>

                <script>
                    var coll = document.getElementsByClassName("collapsible");
                    var i;

                    for (i = 0; i < coll.length; i++) {
                        coll[i].addEventListener("click", function () {
                            this.classList.toggle("active");
                            var content = this.nextElementSibling;
                            if (content.style.display === "block") {
                                content.style.display = "none";
                            } else {
                                content.style.display = "block";
                            }
                        });
                    }
                </script>
            </div>
        </div>
    </div>
</div>



