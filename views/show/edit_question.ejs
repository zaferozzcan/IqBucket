<%- include("../partials/header.ejs") %>

<%- include("../partials/navbar.ejs") %>


<form style="margin: 150px 0 10px 5px; font-weight: 100;" action="/questions/<%= q.tech %>/<%= q._id %>?_method=PUT"
    method="POST">
    <h1>Edit the <%= q.tech %> Question</h1>
    <div class="form-group">
        <input required:true type="text" class="form-control" name="question" value='<%= q.question %>'>
    </div>
    <div class="form-group">
        <input required:true type="text" class="form-control" name="answer" placeholder="Your answer"
            value='<%= q.answer %>'>
    </div>
    <div class="form-group">
        <input required:true type="text" class="form-control" name="tech" placeholder="technology"
            value='<%= q.tech %>'>
    </div>
    <div class="form-group">
        <input required:true type="text" class="form-control" name="level" placeholder="question level"
            value='<%= q.level %>'>
    </div>
    <div class="form-group">
        <input required:true type="text" class="form-control" name="source" placeholder="answer source"
            value='<%= q.source %>'>
    </div>
    <button type="submit" class="btn btn-warning">Submit</button>
</form>




<%- include("../partials/footer.ejs") %>